---
to: <%= templateDir %>/tsup.config.ts
---
import {defineConfig, Options} from 'tsup';
import {spawnSync} from 'child_process';

const baseConfig: Options = {
  entry: ['src/**/*.ts'],
  splitting: false,
  sourcemap: true,
  minify: false,
  shims: true,
  dts: false,
  // A hacking solution for declaration incremental rebuilds: https://github.com/egoist/tsup/issues/615
  async onSuccess() {
    spawnSync('tsc', ['--project', 'tsconfig.json', '--emitDeclarationOnly', '--declaration']);
  },
};

export default defineConfig([
  {
    ...baseConfig,
    outDir: 'dist',
    target: 'node16',
    platform: 'node',
    format: ['esm'],
  },
  {
    ...baseConfig,
    outDir: 'dist',
    target: 'node14',
    platform: 'node',
    format: ['cjs'],
  },
]);
