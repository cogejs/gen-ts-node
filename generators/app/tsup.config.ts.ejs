---
to: <%= templateDir %>/tsup.config.ts
---
import {defineConfig} from 'tsup';

const baseConfig = {
  entry: ['src/**/*.ts'],
  splitting: false,
  sourcemap: true,
  minify: false,
  shims: true,
  dts: true,
};

export default defineConfig([
  {
    ...baseConfig,
    outDir: 'dist',
    target: 'node16',
    platform: 'node',
    format: ['esm'],
  },
  {
    ...baseConfig,
    outDir: 'dist',
    target: 'node14',
    platform: 'node',
    format: ['cjs'],
  },
]);
