{
  "name": "gen-ts-node",
  "version": "0.16.4",
  "description": "A coge generator for building npm packages with TypeScript.",
  "author": "towyuan@outlook.com",
  "license": "MIT",
  "keywords": [
    "coge-generator",
    "code",
    "generator",
    "typescript",
    "ts",
    "node",
    "package",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cogejs/gen-ts-node.git"
  },
  "scripts": {
    "prerelease": "yarn install && cross-env CI=1 yarn run test",
    "release": "yarn prerelease && np --no-2fa --no-cleanup --no-tests",
    "build": "nb-tsc -b",
    "build:full": "yarn install --ignore-scripts && yarn run clean && yarn run build",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "nb-clean 'dist' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "test:coverage": "jest --collectCoverage --coverageDirectory=\"./coverage\" --reporters=default --reporters=jest-junit --watchAll=false",
    "jest": "jest",
    "posttest": "yarn run lint"
  },
  "dependencies": {
    "@coge/generator": "^0.6.11",
    "chalk": "^4.1.2",
    "execa": "^6.1.0",
    "fs-extra": "^10.0.1",
    "git-remote-origin-url": "^4.0.0",
    "micromatch": "^4.0.4",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.6",
    "@nutol/eslint-config": "^0.2.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.22",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-plugin": "^4.1.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "np": "^7.6.1",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "packageManager": "yarn@3.2.0"
}
